<div class="row mb-3">
  <div class="col-lg-8 offset-lg-2">
    <%= form_for [@act, @comment], url: act_comments_path(@act) do |f| %>
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control mb-3', row: 4, placeholder: Comment.human_attribute_name(:body) %>
      <%= f.submit "コメント", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>